@model BookDTO
@{
    ViewData["Title"] = "DeleteBook";
}

<div>
    <form asp-action="DeleteBook">
        <input asp-for="BookId" hidden />
        <div class="container border p-3">
            <hr />
            <div class="row">

                <div class="col-2">
                    <label asp-for="Title" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Title" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Author" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Author" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="PublishedOn" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="PublishedOn" disabled class="form-control rows="5" />
                </div>
                <div class="col-2">
                    <label asp-for="Genre" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Genre" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Description" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Description" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Availability" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Availability" disabled class="form-control" />
                </div>

                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="BookIndex">Back To List</a>
                </div>

            </div>
        </div>
    </form>
</div>
